{% extends 'base.html.twig' %}

{% block homeactive %}{% endblock %}

{% block content %}

    <div class="container container-research">

        <div class="panel panel-primary panel-researchusers pull-left">

            <div class="panel-heading"><h1 class="panel-title">Users</h1></div>

            <ul class="list-group">

                {# if no users #}
                {% if users|length == 0 %}
                    <li class="list-group-item">
                        <p>No users to display.</p>
                    </li>
                {% else %}

                    {% for u in users %}
                        <li class="list-group-item">

                            {% if u.profilePic != false %}
                                <p><img class="img-circle" width="40px" src="/Kebagram/public/assets/img/avatars/{{ u.profilePic }}"/>&nbsp;&nbsp;@{{ u.username }}</p>
                            {% else %}
                                <p><img class="img-circle" width="40px" src="/Kebagram/public/assets/default.jpg"/>&nbsp;&nbsp;@{{ u.username }}</p>
                            {% endif %}

                        </li>
                    {% endfor %}

                {% endif %}

            </ul>

        </div>

        <div class="panel panel-researchtags pull-right">

            <ul class="list-group">

                {# if no kebabs #}
                {% if kebabs|length == 0 %}
                    <li class="list-group-item">
                        <p>No kebabs to display.</p>
                    </li>
                {% else %}

                    {% for k in kebabs %}
                        <div class="panel panel-primary container-kebab">

                            {# if image de profil #}
                            {% if k[0].profilePic != false %}
                                <div class="panel-heading"><h1 class="panel-title"><strong>{{ k[0].Name }}</strong> <element class="pull-right">@{{ k[0].username }}</element><img class="pull-right img-circle img-userkebab" src="/Kebagram/public/assets/img/avatars/{{ k[0].profilePic }}"></h1></div>
                            {% else %}
                                <div class="panel-heading"><h1 class="panel-title"><strong>{{ k[0].Name }}</strong> <element class="pull-right">@{{ k[0].username }}</element><img class="pull-right img-circle img-userkebab" src="/Kebagram/public/assets/default.jpg"></h1></div>
                            {% endif %}

                            {# img #}
                            <div class="panel-body">
                                <img class="img-responsive" src="/Kebagram/public/assets/img/kebabs/{{ k[0].Link }}"><br>
                            </div>

                            <ul class="list-group">

                                {# desc #}
                                <li class="list-group-item">
                                    <p>{{ k[0].Desc }}</p>
                                </li>

                                {# tags #}
                                <li class="list-group-item">
                                    <p class="textgrise">
                                        {% for tag in k[1] %}
                                            #{{ tag.tag }}
                                        {% endfor %}
                                    </p>
                                </li>

                                {# comments #}
                                <li class="list-group-item">
                                    Commentaires
                                </li>
                            </ul>
                        </div>

                    {% endfor %}

                {% endif %}

            </ul>

        </div>
    </div>


{% endblock %}
